<div class="not_in">
	<div class="not_in_box">
		<div class="not_in_box_head">
			<p><b>サイトニュース一覧</b></p>
		</div>

		<% @notices.each do |notice| %>
			<div class="not_in_main clearfix">
				<div class="not_in_main_l">
					<% if notice.category == 1 %>
						<p><b>お知らせ</b></p>
					<% elsif notice.category == 2 %>
						<p><b>新着記事</b></p>
					<% elsif notice.category == 3 %>
						<p><b>注目</b></p>
					<% end %>
				</div>
				<div class="not_in_main_c">
					<p><%= notice.text %></p>
				</div>
				<div class="not_in_main_r">
					<p><%= notice.created_at.strftime('%Y/%m/%d') %>
						<% if current_user.try(:admin?) %>
						<%= link_to "編集", edit_notice_path(notice.id), class: "btn-success btn-sm" %>
						<%= link_to "削除", notice_path(notice.id), method: :delete, "data-confirm" => "この印刷所を削除します", class: "btn-danger btn-sm" %>
						<% end %>
					</p>
				</div>
			</div>
		<% end %>

		<%= paginate @notices, class: "pagenate" %>
		<div class="not_in_back">
			<%= link_to "戻る", user_path(current_user.id), class: "pros_link" %>
		</div>
	</div>
</div>