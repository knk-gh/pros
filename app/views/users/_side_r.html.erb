<!-- scssはuser_showと同一 -->
	<div class="side_bar" id="layout">

		<div class="side_image_box">
			<%= attachment_image_tag @userme, :user_image, :limit, '100%', '100%', fallback: "no_image.jpg", class: "side_image" %>
		</div>
		<div class="side_name">
			<%= @userme.name %>
			<% if @userme.status == 1 %>
				<p>未創作</p>
			<% elsif @userme.status == 2 %>
				<p>創作中</p>
			<% elsif @userme.status == 3 %>
				<p>ここを使う余裕すら無し</p>
			<% end %>
		</div>
		<div class="side_prof">
			<%= @userme.profile %>
		</div>
		<div class="side_fav">
			<% if @user == current_user %>
            	<%= link_to '応援ユーザー一覧', following_user_path(@user), class: "btn btn-info" %>
          	<% else %>
            	<% if current_user.following?(@user) %>
              		<%= render 'unfollow' %>
            	<% else %>
              		<%= render 'follow' %>
            	<% end %>
          <% end %>
		</div>
		<div class="side_ikinuki">
			ikinuki
		</div>
		<div class="side_ikinuki_image clearfix">
			<div class="ikinuki_image_box">
				<% @graffitis.each do |graf| %>
					<%= link_to user_graffiti_path(user_id: graf.user.id, id: graf.id), class: " modalBtn" do %>
						<%= attachment_image_tag graf, :graffiti_image, format: 'jpeg', class: "ikinuki_image_main" %>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="side_motto">
			motto
		</div>

	</div>

</div>

<!-- ↓全体用の締めdiv -->
</div>