<div>
  <% if @progress.worried_by?(current_user) %>
      <%= link_to user_progress_worries_path(user_id: @user.id, progress_id: @progress.id), method: :delete, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        <%= @progress.worries.count %> 間に合う？
      <% end %>
  <% else %>
      <%= link_to user_progress_worries_path(user_id: @user.id, progress_id: @progress.id), method: :post, remote: true do %>
        <i class="fa fa-heart-o" aria-hidden="true"></i>
        <%= @progress.worries.count %> 心配する
      <% end %>
  <% end %>
</div>